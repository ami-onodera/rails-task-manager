<div class="container">
<h1>Edit "<%= @task.title %>"</h1>
<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.check_box :completed, class: "checkbox" %>
    <%= f.label :completed %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<br>
<%= link_to(raw("<i class='fas fa-undo-alt'></i> Back to the tasklist"), tasks_path) %>
</div>
